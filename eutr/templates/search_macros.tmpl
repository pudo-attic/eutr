{% macro pager(pager) %}
  <div class="pagination">
    <ul>
    {% if pager.has_prev %}
      <li class="prev">
        <a href="{{ pager.prev_url }}">&laquo; back</a>
      </li>
    {% else %}
      <li class="prev disabled">
        <a>&laquo; back</a>
      </li>
    {% endif %}
    <li class="active">
      <a>{{ pager.page }} / {{ pager.pages }}</a>
    </li>
    {% if pager.has_next %}
      <li class="next">
        <a href="{{ pager.next_url }}">next &raquo;</a>
      </li>
    {% else %}
      <li class="next disabled">
        <a>next &raquo;</a>
      </li>
    {% endif %}
    </ul>
  </div>
{% endmacro %}
